<h1>Simple Workout Tracker</h1>
<form method="post">
   <table>
      <thead></thead>
      <tbody>
         <tr>
            <td>
               <input type="hidden" name="id" />
               <label for="date">Date of Workout: </label>
            </td>
            <td>
               <input type="date" name="date"/>
            </td>
            <td>
               <label for="name">Workout Name: </label>
            </td>
            <td colspan="3">
               <input type="text" name="name"/>
            </td>
         </tr>
         <tr>
            <td>
               <label for="reps">Number of Reps: </label>
            </td>
            <td>
               <input type="text" name="reps"/>
            </td>
            <td>
               <label for="weight">Weight Used: </label>
            </td>
            <td>
               <input type="text" name="weight"/>
            </td>
            <td>
               <label for="unit">Unit of Weight: </label>
            </td>
            <td>
               <input type="radio" name="unit" value="lbs" checked="checked"/> lbs
               <input type="radio" name="unit" value="kgs"/> kgs
            </td>
         </tr>
         <tr>
            <td colspan="6" align="center">
               <input id="formBtn" type="submit" name="add" value="Add"/>
            </td>
         </tr>
      </tbody>
   </table>
</form>
<hr>

<table>
   <thead>
      <th>Date</th>
      <th>Workout Name</th>
      <th># of Reps</th>
      <th>Weight Used</th>
      <th>Unit of weight</th>
      <th>Options</th>
   </thead>
   <tbody>
      {{#if results}}
         {{#each results}}
            <tr id={{this.id}}>
               <td>{{this.date}}</td>
               <td>{{this.name}}</td>
               <td>{{this.reps}}</td>
               <td>{{this.weight}}</td>
               <td>{{#if this.unit}} lbs {{else}} kgs {{/if}}</td>
               <td>
                  <form method="post">
                     <input type="hidden" name="id" />
                     <input type="submit" name= "edit" value="Edit"/>
                  </form>
                  <form method="post">
                     <input type="hidden" name="id" />
                     <input type="submit" name="delete" value="Delete"/>
                  </form>
               </td>
            </tr>
         {{/each}}
      {{/if}}
   </tbody>
</table>


