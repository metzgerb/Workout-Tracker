<h1>Simple Workout Tracker</h1>
<form action="">
   <table>
      <thead></thead>
      <tbody>
         <tr>
            <td>
               <input type="hidden" name="id" />
               <label for="date">Date of Workout: </label>
            </td>
            <td>
               <input type="date" name="date"/>
            </td>
            <td>
               <label for="name">Workout Name: </label>
            </td>
            <td colspan="3">
               <input type="text" name="name"/>
            </td>
         </tr>
         <tr>
            <td>
               <label for="reps">Number of Reps: </label>
            </td>
            <td>
               <input type="text" name="reps"/>
            </td>
            <td>
               <label for="weight">Weight Used: </label>
            </td>
            <td>
               <input type="text" name="weight"/>
            </td>
            <td>
               <label for="unit">Unit of Weight: </label>
            </td>
            <td>
               <input type="radio" name="unit" value="lbs" checked="checked"/> lbs
               <input type="radio" name="unit" value="kgs"/> kgs
            </td>
         </tr>
         <tr>
            <td colspan="6" align="center">
               <input type="submit" value="Save"/>
            </td>
         </tr>
      </tbody>
   </table>
</form>
<hr>
{{#if results}}
   <table>
      <thead>
         <th>Date</th>
         <th>Workout Name</th>
         <th># of Reps</th>
         <th>Weight Used</th>
         <th>Unit of weight</th>
         <th>Options</th>
      </thead>
      <tbody>
         {{#each results}}
            <tr>
               <td>{{this.date}}</td>
               <td>{{this.name}}</td>
               <td>{{this.reps}}</td>
               <td>{{this.weight}}</td>
               <td>{{#if this.unit}} lbs {{else}} kgs {{/if}}</td>
               <td>
                  <form>
                     <input type="hidden" name="id" />
                     <input type="submit" value="Edit"/>
                  </form>
                  <form>
                     <input type="hidden" name="id" />
                     <input type="submit" value="Delete"/>
                  </form>
               </td>
            </tr>
         {{/each}}
      </tbody>
   </table>
{{else}}
   <h3>No completed workouts</h3>
{{/if}}
